<Window x:Class="Splash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:emoji="clr-namespace:Emoji.Wpf;assembly=Emoji.Wpf"
        xmlns:local="clr-namespace:RestPOS"
        mc:Ignorable="d"
        Title="Splash" Height="450" Width="800" WindowStartupLocation="CenterScreen" WindowStyle="None" Background="{DynamicResource BackgroundColor}">
    <Window.Resources>
        <ResourceDictionary x:Name="Recursos" Source="/Assets/Icons.xaml"/>
    </Window.Resources>
    <Grid>
        <Image Source="{DynamicResource SimpleLogo}" Width="300" VerticalAlignment="Top" Margin="0,40,0,0"></Image>
        <Label Content="Cargando..." Foreground="{DynamicResource TextColor}" FontFamily="/RestPOS;component/Fonts/#Roboto" FontSize="40" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,250,0,0"></Label>
        <emoji:TextBlock Text="Hecho con ❤ Por Alex Carcamo para Simple Fast Food 🍕🍔" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" TextAlignment="Center" Foreground="{DynamicResource LightColor}" Margin="0,0,0,5"/>
    </Grid>
</Window>
