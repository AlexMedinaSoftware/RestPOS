<Page x:Class="Dash_Mesas"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RestPOS"
      mc:Ignorable="d" 
      d:DesignHeight="733" d:DesignWidth="1166"
      Background="{DynamicResource LightColor}"
      Title="Mesas">
    <Page.Resources>
        <ResourceDictionary x:Name="Recursos" Source="/Assets/Icons.xaml"/>
    </Page.Resources>
    <Grid>
        <UniformGrid Background="{DynamicResource LightColor}" Margin="20,20,35,20" Columns="6" VerticalAlignment="Top" HorizontalAlignment="left">
            <Border BorderBrush="{DynamicResource Color1}" Style="{DynamicResource Dash_Item_Border}" BorderThickness="3" CornerRadius="10" Width="110" Height="110" Margin="10">
                <Image Height="60" Source="{DynamicResource Add_Red}"/>
            </Border>
            </UniformGrid>
        <ScrollViewer VerticalScrollBarVisibility="Visible" Margin="20,150,20,20">
            <UniformGrid x:Name="Grid_Mesas" Background="{DynamicResource LightColor}" Columns="6" VerticalAlignment="Top" HorizontalAlignment="Left">
            </UniformGrid>
        </ScrollViewer>
    </Grid>
</Page>
